<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 ">
        <div class="card mb-3" style="width: 24rem;">
            <img src="<%= campground.image%>" class="card-img-top" alt="" eight="400" width="400">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= campground.location %></li>
              <li class="list-group-item">$<%= campground.price %></li>
            </ul>
            <div class="card-body">
              <a class="card-link btn btn-info" href="/campamentos/<%=campground._id%>/edit">Editar</a>
              <form class="d-inline" action="/campamentos/<%=campground._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Eliminar</button>
              </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
          </div>
    </div>
    <div class="col-6">
      <h3> Deja un comentario </h3>
          <form action="/campamentos/<%= campground._id %>/reviews"  method="POST" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="rating"> Calificaci칩n </label>
              <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
              <label  class="form-label"  for="body"> Rese침a </label>
              <textarea  class="form-control"  name="review[body]" id="body" cols="30" rows="3" required></textarea>
              <div class="valid-feedback">
                Pinta bien!
              </div>
            </div>
            <button class="btn btn-success "> Enviar </button>
          </form>
          <% for(let review of campground.reviews) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">Calificaci칩n: <%= review.rating %></h5>
              <p class="card-text"> Rese침a : <%= review.body %></p>
              <form action="/campamentos/<%=campground._id %>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Eliminar</button>
              </form>
            </div>
          </div>
          <% } %>
    </div>      
</div>
