<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3" style="width: 24rem;">
            <img src="<%= campground.image%>" class="card-img-top" alt="" eight="400" width="400">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= campground.location %></li>
              <li class="list-group-item">$<%= campground.price %></li>
            </ul>
            <div class="card-body">
              <a class="card-link btn btn-info" href="/campamentos/<%=campground._id%>/edit">Editar</a>
              <form class="d-inline" action="/campamentos/<%=campground._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Eliminar</button>
              </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
          </div>
    </div>

</div>
